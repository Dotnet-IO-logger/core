<Window x:Class="Diol.applications.WpfClient.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:views="clr-namespace:Diol.applications.WpfClient.Views"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="650" 
        Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ToolBar 
            Grid.Row="0">
            <Button 
                Command="{Binding StartCommand}"
                IsEnabled="{Binding CanExecute}" >Start</Button>
            <Button Command="{Binding ClearCommand}">Clear</Button>
            <Button>Settings</Button>
        </ToolBar>

        <TabControl
                Grid.Row="1">
            <TabItem
                Header="HTTP">
                <views:HttpMasterDetailView />
            </TabItem>
            <TabItem
                    Header="Aspnet core">
                <DataGrid></DataGrid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
